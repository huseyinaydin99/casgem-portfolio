    <script>
        const typedTextSpan = document.querySelector(".typed-text");
        const cursorSpan = document.querySelector(".cursor");

        /*
        const abc = fetch("/Portfolio/test")
            .catch((err) => alert(err))
            .then((response) => { alert(JSON.stringify(response.json())); })
